<h3>{{viewTitle}}</h3>

<form action="/employee/delete" method="POST">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label for="fullName">Full Name</label>
        <input type="text" disabled="disabled" readonly="readonly" name="fullName" id="fullName" class="form-control" placeholder="Full Name" value="{{employee.fullName}}">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" disabled="disabled" readonly="readonly"  name="email" id="email" class="form-control" placeholder="Email" value="{{employee.email}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="mobile">Mobile</label>
            <input type="text" disabled="disabled" readonly="readonly" name="mobile" id="mobile" class="form-control" placeholder="Mobile" value="{{employee.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label for="city">City</label>
            <input type="text" disabled="disabled" readonly="readonly" name="city" id="city" class="form-control" placeholder="City" value="{{employee.city}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-trash"></i> Delete</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>